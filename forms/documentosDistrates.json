                                    "script": "import java.io.File;\r\nimport java.util.ArrayList;\r\nimport java.util.Collection;\r\nimport java.util.HashMap;\r\nimport java.util.Map;\r\nimport org.joget.apps.app.model.AppDefinition;\r\nimport org.joget.apps.app.service.AppService;\r\nimport org.joget.apps.app.service.AppUtil;\r\nimport org.joget.apps.form.dao.FormDataDao;\r\nimport org.joget.apps.form.model.Element;\r\nimport org.joget.apps.form.model.Form;\r\nimport org.joget.apps.form.model.FormBinder;\r\nimport org.joget.apps.form.model.FormData;\r\nimport org.joget.apps.form.model.FormDataDeletableBinder;\r\nimport org.joget.apps.form.model.FormLoadBinder;\r\nimport org.joget.apps.form.model.FormLoadMultiRowElementBinder;\r\nimport org.joget.apps.form.model.FormRow;\r\nimport org.joget.apps.form.model.FormRowSet;\r\nimport org.joget.apps.form.model.FormStoreBinder;\r\nimport org.joget.apps.form.model.FormStoreMultiRowElementBinder;\r\nimport org.joget.apps.form.service.FormUtil;\r\nimport org.joget.commons.util.LogUtil;\r\nimport org.joget.commons.util.FileManager;\r\nimport org.joget.apps.form.service.FileUtil;\r\nimport org.joget.commons.util.UuidGenerator;\r\n\r\n   \r\npublic FormRowSet store(Element element, FormRowSet rows, FormData formData) {\r\n    if (rows == null) {\r\n        return null;\r\n    }\r\n\r\n    FormRow firstRow = rows.iterator().next();\r\n    \r\n    if(!firstRow.get(\"detalheDocumentoDistrates\").isEmpty() && firstRow.get(\"detalheDocumentoDistrates\") != \"\"){\r\n \r\n        try {\r\n            String tableName = \"documentos_dist\";\r\n            String formDefId = \"documentosDistrates\";\r\n            String foreignKey = \"fk\";\r\n            String fileField = \"detalheDocumentoDistrates\";\r\n             \r\n            FormDataDao formDataDao = (FormDataDao) AppUtil.getApplicationContext().getBean(\"formDataDao\");\r\n             \r\n            Form parentForm = FormUtil.findRootForm(element);\r\n            String primaryKeyValue = parentForm.getPrimaryKeyValue(formData);\r\n             \r\n            \r\n            Date currentDate = new Date();\r\n            \r\n            for (FormRow row : rows) {\r\n                \r\n                String uploadedDocuments = row.get(\"detalheDocumentoDistrates\");\r\n                String[] documentos = uploadedDocuments.split(\";\");\r\n                String id_processo = row.get(\"id_processo\");\r\n                String id_doc = row.get(\"id_doc\");\r\n                String data_validade_documento = row.get(\"data_validade_documento\");\r\n                \r\n                String uuid=\"\";\r\n                String initUuid = \"\";\r\n                \r\n                for(int i = 0; i<documentos.length; i++){\r\n                    FormRowSet rowSet = new FormRowSet();\r\n                    FormRow oneDocRow = new FormRow();\r\n                    //row;\r\n                    \r\n                    uuid= UuidGenerator.getInstance().getUuid();\r\n                    \r\n                    row.setId(uuid);\r\n                    \r\n                        \r\n                    // set created date\r\n                    row.setDateCreated(currentDate);\r\n                    \r\n                    // set modified date\r\n                    row.setDateModified(currentDate);\r\n                    row.put(\"detalheDocumentoDistrates\", documentos[i]);\r\n                    row.put(\"nome_ficheiro\", documentos[i].toString());\r\n                    row.put(\"id_processo\", id_processo);\r\n                    row.put(\"id_doc\", id_doc);\r\n                    row.put(\"createdBy\", \"#currentUser.username#\");\r\n                    row.put(\"createdByName\", \"#currentUser.fullName#\");\r\n                    row.put(\"data_validade_documento\", data_validade_documento);\r\n                    \r\n                    rowSet.add(row);\r\n                    \r\n                    //Check and update filename if exists\r\n                    FileUtil.checkAndUpdateFileName(rowSet, tableName, uuid);\r\n            \r\n                    // save data\r\n                    formDataDao.saveOrUpdate(formDefId, tableName, rowSet);\r\n\r\n                    if(i>0){\r\n                        String sourceDocs = \"#envVariable.sourceDocumentsPath#\";\r\n                        File destPath = new File(sourceDocs + uuid);\r\n                        destPath.mkdir();\r\n                        File sourceFile = new File(sourceDocs+  initUuid + \"\\\\\" + documentos[i].toString());\r\n                        sourceFile.renameTo(new File(destPath + \"\\\\\" + documentos[i].toString()));\r\n\r\n                        \r\n                    }else{\r\n                    //store files\r\n                    FileUtil.storeFileFromFormRowSet(rowSet, tableName, uuid);\r\n                    initUuid = uuid;\r\n                    }\r\n                    \r\n                    \r\n                    \r\n                }\r\n                \r\n               \r\n            }\r\n\r\n\r\n        } catch (Exception e) {\r\n            LogUtil.error(\"File Handling in Bean Shell Binder Sample - Grid Form\", e, \"Store data error!!\");\r\n        }\r\n    }\r\n    return rows;\r\n}\r\n   \r\n//call store method with injected variable\r\nreturn store(element, rows, formData);",
